<div class='container' style="margin-top:40px">
  <form action='/home/create' method='post'> 
    <div class="form-group">
      <label>Title</label>
        <input type="text" class="form-control" name='title' placeholder="Title">
    </div>
    <div class="form-group">
      <label>Content</label>
      <textarea class="form-control" rows="5" name='content' placeholder="Content"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form><br>
</div>
<div class='container' style="margin-top:40px">

<% @posts.each do |p| %>
<div class="well">
  <p>Title:<%= p.title %><br>
  Content:<%= p.content %></p>

<span>comment</span><br>
<% p.comments.reverse.each do |c| %>
  <ul>
    <li><%= c.content%></br>
    <a href = '/home/edit_comment/<%=c.id%>'>Edit</a>
    <a href = '/home/delete_comment/<%=c.id%>'>Delete</a>
    </li>
  </ul>
<% end %>
<form action='/home/create_comment' method='post'> 
  <div class="form-group">
    <input type='hidden' value=<%=p.id%> name="id_of_post">
    <label>Comment</label>
    <textarea class="form-control" rows="5" name='content' placeholder="Content"></textarea>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form><br>
</div>
<% end %>



</div>